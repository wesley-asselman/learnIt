<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex-box">
    <h1 class="font-bold text-4xl">Enemies</h1>
    <%= link_to "Nieuwe vijand", new_enemy_path, class: "new-button" %>
  </div>

  <div>
    <%= Enemy.killed_enemies %> / <%= @enemies.count %>
  </div>

  <div id="enemies" class="min-w-full">
    <%= render @enemies %>
  </div>
</div>
