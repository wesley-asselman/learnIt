<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex-box">
    <h1 class="font-bold text-4xl"><%= link_to @subject.name, @subject %> | Begrippenlijsten</h1>
    <%= link_to "Nieuwe begrippenlijst", new_subject_glossary_path, class: "new-button" %>
  </div>

  <%= render "subjects/subject_tab_navigation" %>

  <div id="glossaries" class="min-w-full">
    <%= render @glossaries %>
  </div>
</div>
